<h3 class="p-3 text-center text-success">Sửa lớp học</h3>
<form action="/classes/update/{{_class._id}}" method="POST" class="pb-5">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Tên lớp</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" placeholder="Tên lớp" name="name"
                value="{{_class.name}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="school" class="col-sm-2 col-form-label">Trường</label>
        <div class="col-sm-10">
            <select name="school" id="school" class="form-control">
                {{#each schools}}
                    <option value="{{this._id}}" {{isSelected ../_class.school._id this._id}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 text-right mr-3">
            <input type="submit" value="Sửa" class="btn btn-success">
        </div>
    </div>
</form>